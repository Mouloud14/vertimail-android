<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="#4f46e5"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp">

        <View
            android:id="@+id/headerAvatarBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_indicator"
            android:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/headerAvatarLetter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#4f46e5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgHeaderAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/CircleImageView" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvHeaderUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Utilisateur"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStorageInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Espace utilisé : ..."
            android:textSize="12sp"
            android:textColor="#E0E0E0"/>

        <!-- Petit indicateur de version mis à jour -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.2.stable"
            android:textSize="10sp"
            android:textColor="#80FFFFFF" />
    </LinearLayout>

</LinearLayout>